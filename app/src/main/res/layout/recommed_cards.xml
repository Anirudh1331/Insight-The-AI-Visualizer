<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="11">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:layout_weight="5">
            <ImageView
                android:id="@+id/image_viewAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">

            <TextView
                android:id="@+id/textview_viewAll"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="Sample Title"
                android:textColor="#000000"
                android:textSize="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <RatingBar
                    android:id="@+id/ratingbar_viewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5"
                    android:layout_gravity="center_vertical"
                    style="?android:attr/ratingBarStyleSmall"/>
                <TextView
                    android:id="@+id/rating_text_viewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 "
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/rating_times_viewAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(10 ratings)"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <TextView
                android:id="@+id/price_viewAll"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_height="20dp"
                android:textColor="#000000"
                android:text="Price"/>
            <TextView
                android:id="@+id/add_cart_viewAll"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Add to Cart"
                android:textSize="18dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FF0000"
                android:layout_gravity="end"
                android:gravity="bottom"/>


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

